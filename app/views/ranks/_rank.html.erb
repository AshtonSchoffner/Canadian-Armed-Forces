<div class="col-4 py-2">
  <div class="card">
    <div class="card-body">
      <% if rank_link %>
        <h4 class="card-title"><%= link_to rank.rank_el, rank %></h4>
        <h4 class="card-title"><%= link_to rank.rank_fr, rank %></h4>
      <% else %>
        <h4 class="card-title"><%= rank.rank_el %></h4>
        <h4 class="card-title"><%= rank.rank_fr %></h4>
      <% end %>

      <% if category_link %>
        <p class="card-text">
          <strong>Rank Category: </strong>
          <%= link_to rank.rank_category.category_el, rank.rank_category %>
        </p>
        <p class="card-text">
          <strong>Catégorie de Classement: </strong>
          <%= link_to rank.rank_category.category_fr, rank.rank_category %>
        </p>
      <% else %>
        <p class="card-text">
          <strong>Rank Category: </strong>
          <%= rank.rank_category.category_el %>
        </p>
        <p class="card-text">
          <strong>Catégorie de Classement: </strong>
          <%= rank.rank_category.category_fr %>
        </p>
      <% end %>

      <% if environment_link %>
        <p class="card-text">
          <strong>Environment: </strong>
          <%= link_to rank.environment.environment_el, rank.environment %>
        </p>
        <p class="card-text">
          <strong>Environnement: </strong>
          <%= link_to rank.environment.environment_fr, rank.environment %>
        </p>
      <% else %>
        <p class="card-text">
          <strong>Environment: </strong>
          <%= rank.environment.environment_el %>
        </p>
        <p class="card-text">
          <strong>Environnement: </strong>
          <%= rank.environment.environment_fr %>
        </p>
      <% end %>
    </div>
  </div>
</div>