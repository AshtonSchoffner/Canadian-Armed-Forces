<div>
  <% if link_equipment %>
    <h3><%= link_to equipment.name_el, equipment %></h3>
    <h3><%= link_to equipment.name_fr, equipment %></h3>
  <% else %>
    <h3><%= equipment.name_el %></h3>
    <h3><%= equipment.name_fr %></h3>
  <% end %>

  <% if link_type %>
    <p>
      <strong>Equipment Type: </strong>
      <%= link_to equipment.equipment_type.type_el, equipment.equipment_type %>
    </p>
    <p>
      <strong>Type d'équipement: </strong>
      <%= link_to equipment.equipment_type.type_fr, equipment.equipment_type %>
    </p>
  <% else %>
    <p>
      <strong>Equipment Type: </strong>
      <%= equipment.equipment_type.type_el %>
    </p>
    <p>
      <strong>Type d'équipement: </strong>
      <%= equipment.equipment_type.type_fr %>
    </p>
  <% end %>

  <% if show_description %>
    <p>
      <strong>Description: </strong>
      <%= @equipment.description_el %>
    </p>
    <p>
      <strong>Description: </strong>
      <%= @equipment.description_fr %>
    </p>
  <% end %>
</div>